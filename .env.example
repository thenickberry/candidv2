# CANDIDv2 Environment Configuration
# Copy this file to .env and update values for your environment

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_HOST=db
DB_NAME=candid
DB_USER=candid
DB_PASS=candid_secret
MYSQL_ROOT_PASSWORD=root_secret

# Session
COOKIE_NAME=candid
COOKIE_PATH=/
SESSION_LIFETIME=86400

# Image defaults
DEFAULT_WIDTH=480
DEFAULT_HEIGHT=360
DEFAULT_ROWS=5
DEFAULT_COLS=2

# Upload settings
UPLOAD_DIR=/var/www/html/incoming
MAX_UPLOAD_SIZE=50M

# Theme
DEFAULT_THEME=default
